{
  "name": "ChessVoiceControl",
  "version": "0.0.1",
  "description": "Control online chess with your voice",
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {},
  "web_accessible_resources": [
    "indicator.html",
    "indicator.css",
    "images/blue-circle.svg",
    "images/green-circle.svg",
    "images/red-circle.svg"
  ]
}